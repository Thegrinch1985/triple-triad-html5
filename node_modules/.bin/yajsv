#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  --use_strict "$basedir/../yajsv/bin/yajsv" "$@"
  ret=$?
else 
  node  --use_strict "$basedir/../yajsv/bin/yajsv" "$@"
  ret=$?
fi
exit $ret
